{
  // server & port configuration
  "server": {
    "host": "localhost",
    "port": 8100,
    "admin_key": ""
  },
  // locations for storage
  "storage": {
    "data_dir": "data",
    "user_dir": "users",
    "catalog_dir": "catalogs",
    // any files from this folder will be copied to the data folder before fetching/uploading data.
    "meta_dir": "meta",
    // store user catalogs inside their data directories
    "catalogs_with_data": false,
    // amount of disk space to try keep free - older data not in use will be pruned
    "data_free_gb": 100,
    // maximum age in days to keep data (0 to never remove)
    "data_max_days": 60,
    // how often to prune data in minutes
    "data_prune_mins": 30,
    // how often to re-fetch catalogs in days
    "catalog_update_days": 30
  },
  // data source configuration
  "data_sources": {
    "pdbj": {
      "enabled": true,
      // get the data size via rsync
      "rsync_size": true
    },
    "sbgrid": {
      "enabled": true,
      "rsync_size": true
    },
    "irrmc": {
      "enabled": true
    },
    // used for user uploaded data
    "upload": {
      // allow user uploads
      "enabled": true,
      // limit in megabytes of data per entry
      "limit_mb": 20000
    }
  },
  // other configuration settings
  "other": {
    // return pdb entry results from rcsb
    "rcsb_results": false
  }
}